{
  "name": "@tokenized_if/backend",
  "version": "1.0.0",
  "description": "REST-API for tokenizing inventory, serving as collateral to obtain financing.",
  "main": "dist/app.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:lsp": "NODE_ENV=lsp ts-node -r dotenv-flow/config src/app.ts",
    "up:lsp": "docker-compose -p lsp --env-file .env.lsp up",
    "down:lsp": "docker-compose -p lsp --env-file .env.lsp down",
    "start:importer": "NODE_ENV=importer ts-node -r dotenv-flow/config src/app.ts",
    "up:importer": "docker-compose -p importer --env-file .env.importer up",
    "down:importer": "docker-compose -p importer --env-file .env.importer down",
    "start:financer": "NODE_ENV=financer ts-node -r dotenv-flow/config src/app.ts",
    "up:financer": "docker-compose -p financer --env-file .env.financer up",
    "down:financer": "docker-compose -p financer --env-file .env.financer down",
    "build": "tsc --build",
    "clean": "tsc --build --clean"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/pg": "^7.14.11",
    "@types/pino-http": "^5.4.0",
    "dotenv-flow": "^3.2.0",
    "pino-pretty": "^4.7.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@tokenized_if/token-registry": "^1.0.0",
    "@tokenized_if/shared": "^1.0.0",
    "@tokenized_if/messaging": "^1.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.5.1",
    "pino-http": "^5.5.0",
    "web3": "^1.3.5"
  }
}
