{
  "name": "messaging",
  "version": "1.0.0",
  "description": "Distributed Messaging Service Provider",
  "main": "src/index.ts",
  "author": "Bart van Schaick",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "npm run test:startup && mocha -r ts-node/register --exit test/integration.ts ; npm run test:teardown",
    "test:startup": "docker run -d --name nats-test -p 4222:4222 nats && sleep 2",
    "test:teardown": "docker stop nats-test && docker container rm nats-test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@baseline-protocol/messaging": "^0.1.0",
    "nats": "^2.0.0"
  }
}
