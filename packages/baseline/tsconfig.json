{
  "include": ["src/**/*"],
  "exclude": ["dist", "artifacts", "contracts", "node_modules"],
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
